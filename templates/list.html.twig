{# templates/list.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Lista</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        table {    
            border-collapse: collapse;
            border-radius: 10px;
            width: 100%;
            border: 1px solid #6f42c1;
            margin-top: 20px;
            padding: 0px;
        }
        th {
            background-color: #6f42c1;
            color: white;
            border: none;
        }
        th, td {
            border: 1px solid #6f42c1;
            padding: 10px;
            text-align: left;
        }
        tr:nth-child(even) {
            background-color:  #f1ecf9;
        }

        .card {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
}
        
    </style>
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: #d3c5ec;">
        <h2>Lista
        <a href='https://jsonplaceholder.typicode.com/posts'>https://jsonplaceholder.typicode.com/posts</a>
        </h2>
    </nav>
    <div class="container py-5">
    {% if data is empty %}
        <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
            <div class="card-header">Database is empty</div>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">There are no data in the database.<br>Populate it with command <br>php bin/console fetch</p>
            </div>
        </div>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.title }}</td>
                        <td>{{ item.body }}</td>
                        <td><button class='btn btn-secondary'>Delete</button></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
</body>
</html>
